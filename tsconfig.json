{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".", // Permite src/ e tests/ no mesmo n√≠vel
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "jest", "express"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".", // Para suportar @/
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
