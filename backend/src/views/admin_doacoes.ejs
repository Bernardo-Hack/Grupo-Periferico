<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title><%= pageTitle %></title>
</head>
<body>
    <h1><%= pageTitle %></h1>

    <% if (doacoes && doacoes.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome do Usuário</th>
                    <th>Valor (R$)</th>
                    <th>Método de Pagamento</th>
                    <th>Data da Doação</th>
                </tr>
            </thead>
            <tbody>
                <% doacoes.forEach(d => { %>
                    <tr>
                        <td><%= d.id %></td>
                        <td><%= d.nome %></td>
                        <td><%= parseFloat(d.valor).toFixed(2) %></td> <!-- Corrigido aqui -->
                        <td><%= d.metodo_pagamento %></td>
                        <td><%= new Date(d.data_doacao).toLocaleString('pt-BR') %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <p>Total arrecadado: R$ <%= doacoes.reduce((total, d) => total + parseFloat(d.valor), 0).toFixed(2) %></p> <!-- Corrigido aqui -->
    <% } else { %>
        <p>Nenhuma doação registrada.</p>
    <% } %>
</body>
</html>
